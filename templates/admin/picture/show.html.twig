{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
             <tr>
                <th>View</th>
                <td><img src="/images/uploads/{{ picture.path }}" alt="{{ picture.alt }}"></td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ picture.path }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ picture.alt }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ picture.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ picture.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_picture_index') }}">back to list</a>

    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('admin/picture/_delete_form.html.twig') }}
{% endblock %}
