<form method="post" action="{{ path('admin_picture_delete', {'id': picture.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cet élément?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
	<button class="btn btn-danger mb-3 mt-3">Supprimer l'image</button>
</form>
