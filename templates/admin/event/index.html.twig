{% extends 'baseadmin.html.twig' %}

{% block title %}Event index
{% endblock %}

{% block body %}

	<section class="hero-wrap hero-wrap-2 img-black-white" style="background-image: url('{{ asset('build/images/4271330660_74de175953_o.jpg') }}')" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row  slider-text align-items-center justify-content-center">
				<div class="col-md-9 text-center mt-5">
					<h1 class="mb-2 bread">KlassEvent</h1>
					<h2 class="breadcrumbs" style="font-size: 25px;">Evenements</h2>
				</div>
			</div>
		</div>
	</section>

	<section class="ftco-section pt-5">
		<div class="container">
			<div class="row justify-content-center mb-5 pb-2">
				<div class="col-md-8 text-center heading-section">
					<h2 class="mb-5">Tous les événements :</h2>
					<table class="table table-striped">
						<thead class="table-dark">
							<tr>
								<th class="text-center text-admin-3">Type d'événement</th>
								<th class="text-center">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for event in events %}
								<tr>
									<td class="text-admin text-center">{{ event.type|trans }}</td>
									<td class="text-admin-2 text-center">
										<a class="btn btn-info" href="{{ path('admin_event_show', {'id': event.id}) }}">Voir</a>
										<a class="btn btn-warning" href="{{ path('admin_event_edit', {'id': event.id}) }}">Editer</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">Pas d'événement trouvé</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a type="button" class="btn btn-success" href="{{ path('admin_event_new') }}">Ajouter un nouvel événement</a>
					<a type="button" class="btn btn-dark" href="{{ path('admin_index') }}">Retour</a>

				</div>
			</div>
		</div>
	</section>

{% endblock %}
