{% extends 'baseadmin.html.twig' %}

{% block title %}Service
{% endblock %}

{% block body %}

	<section class="hero-wrap hero-wrap-2 img-black-white" style="background-image: url('{{ asset('build/images/4271330660_74de175953_o.jpg') }}')" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row  slider-text align-items-center justify-content-center">
				<div class="col-md-9 text-center mt-5">
					<h1 class="mb-2 bread">KlassEvent</h1>
					<h2 class="breadcrumbs" style="font-size: 25px;">Evenements</h2>
				</div>
			</div>
		</div>
	</section>

	<section class="ftco-section pt-5">
		<div class="container">
			<div class="row justify-content-center mb-5 pb-2">
				<div class="col-md-8 text-center heading-section">

					<h2 class="mb-5">Service :</h2>

					<table class="table">
						<tbody>
							<tr>
								<th>Title</th>
								<td>{{ service.title }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ service.description }}</td>
							</tr>
						</tbody>
					</table>

					<a class="btn btn-warning" href="{{ path('admin_service_edit', {'id': service.id}) }}">Editer</a>

					{{ include('admin/service/_delete_form.html.twig') }}

					<a type="button" class="btn btn-dark" href="{{ path('admin_service_index') }}">Retour</a>

				</div>
			</div>
		</div>
	</section>

{% endblock %}
