<form method="post" action="{{ path('admin_option_delete', {'id': option.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ option.id) }}">
    <button class="btn btn-danger mb-3 mt-3">Supprimer l'option</button>
</form>
