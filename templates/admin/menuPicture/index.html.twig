{% extends 'baseadmin.html.twig' %}

{% block title %}Picture index
{% endblock %}

{% block body %}
	<section class="hero-wrap hero-wrap-2 img-black-white" style="background-image: url('{{ asset('build/images/4271330660_74de175953_o.jpg') }}')" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row  slider-text align-items-center justify-content-center">
				<div class="col-md-9 text-center mt-5">
					<h1 class="mb-2 bread">KlassTraiteur</h1>
					<h2 class="breadcrumbs" style="font-size: 25px;">Traiteur</h2>
				</div>
			</div>
		</div>
	</section>

	<h1>Menu Picture index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Path</th>
				<th>Alt</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for picture in pictures %}
				<tr>
					<td>{{ picture.id }}</td>
					<td>{{ picture.path }}</td>
					<td>{{ picture.alt }}</td>
					<td>{{ picture.name }}</td>
					<td>
						<a href="{{ path('admin_menupicture_show', {'id': picture.id}) }}">show</a>
						<a href="{{ path('admin_menupicture_edit', {'id': picture.id}) }}">edit</a>
						{{ include('admin/menuPicture/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">aucunes images trouvées</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_menupicture_new') }}">Création d'une nouvelle image</a>
{% endblock %}
