{% extends 'baseevent.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<!-- Background picture -->

	<section class="home-slider owl-carousel">
		<div class="slider-item .event-slider" style="background-image:url('{{ asset('build/images/ImgKlassEvent/IMG_1121.jpg') }}')">
			<div class="overlay"></div>
			<div class="container">
				<div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">
					<div class="col-md-12 col-sm-12 text-center">
						<span class="subheading">{{ 'rent.titre'|trans }} {#Klass Event Location#}</span>
						<h2 class="mb-4 h2-event">{{ 'rent.deco2'|trans }}{# Décoration de chaise #}</h2>
					</div>
				</div>
			</div>
		</div>
	</section>
    <!-- End Background picture -->

    <!-- Chairs -->
		<section class="ftco-section ftco-wrap-about">
			<div class="container">
				<div class="row">
					<div class="col-md-7 d-flex">
						<div class="img img-1 mr-md-2" style="background-image:url('{{ asset('build/images/ImgKlassEvent/Decoration/decoration-12.jpeg') }}')"></div>
						<div class="img img-2 ml-md-2" style="background-image:url('{{ asset('build/images/ImgKlassEvent/Decoration/decoration-13.jpeg') }}')"></div>
					</div>
					<div class="col-md-5 wrap-about pt-5 pt-md-5 pb-md-3">
	          		<div class="heading-section mb-4 my-5 my-md-0">
	          			<span class="subheading">{{ 'rent.noshousse'|trans }}{# Nos housses #}</span>
	            		<h2 class="mb-4">{{ 'rent.chaise'|trans }}{#  de chaises #}</h2>
	          		</div>
	          		<p>{{ 'rent.sublimez'|trans }}{#  Sublimez vos chaises grâce à nos housses de chaises et nos noeuds en organza. #}</p>
					</div>
				</div>
			</div>
		</section>

		<section class="container">			
            {% include 'rent/_chairdecoration.html.twig' %}
		</section>

{% endblock %}

