{% extends 'baseevent.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

	<!-- Background picture -->

	<section class="home-slider owl-carousel">
		<div class="slider-item .event-slider" style="background-image:url('{{ asset('build/images/ImgKlassEvent/IMG_10542.jpg') }}')">
			<div class="overlay"></div>
			<div class="container">
				<div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">

					<div class="col-md-12 col-sm-12 text-center">
						<span class="subheading">Klass Event</span>
						<h2 class="mb-4 h2-event">Organisation d'événements clef en main</h2>
					</div>

				</div>
			</div>
		</div>
	</section>

	<!-- End Background picture -->

    <!-- Login form -->

	<section class="ftco-section">
		<div class="container">

			<div class="row justify-content-center mb-5 pb-2">
				<div class="col-md-12 text-center heading-section">
					<span class="subheading">Connectez</span>
					<h2 class="mb-4">Vous !</h2>
				</div>
			</div>

<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        Vous êtes déjà connecté avec {{ app.user.username }} ! <a href="{{ path('security_logout') }}">Se déconnecter</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Renseignez votre e-mail et votre mot de passe pour vous connecter</h1>
    <label for="inputEmail">{{'form.email'|trans}}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
        autofocus>
    <br>
    <label for="inputPassword">{{'form.password'|trans}}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}
    <br>
    <button class="btn btn-lg btn-primary" type="submit">
        {{'form.connection'|trans}}
    </button>
</form>

<a href="{{ path('account_create') }}"><button class="btn btn-lg btn-warning">{{'form.account'|trans}}</button></a>
			</div>

		</section>

		<!-- End Login -->
{% endblock %}