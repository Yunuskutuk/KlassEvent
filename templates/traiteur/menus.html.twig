{% extends 'basetraiteur.html.twig' %}


{% block title %}KlassTraiteur
{% endblock %}

{% block body %}

	<!-- Modal -->
	{% for menu in menus %}
		<div class="modal fade" id="exampleModal{{menu.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h2 class="modal-title" id="exampleModalLongTitle">{{ (menu.name~'.'~menu.id)|trans}}</h2>
						<span><img src="/images/uploads/{{ menu.path }}" class="size-img" data-overlay="gallery"></span>
					</div>
					<div class="modal-body">
						<h5 class="mr-5 modal-title" id="exampleModalLabel">
							{{"quote.description"|trans}}
							:
						</h5>
						<p>
							{{ (menu.description~'.'~menu.id)|trans }}
						</p>
						<h5 class="mr-5 modal-title" id="exampleModalLabel">
							{{"detail.general"|trans}}
							:
						</h5>
						<p>
							{{ (menu.more~'.'~menu.id)|trans }}
						</p>
						<h5 class="mr-5 modal-title" id="exampleModalLabel">{{"prix.general"|trans}}
							:</h5>
						<p>
							{{menu.price}}
							â‚¬
						</p>
					</div>
					<button type="button" value="Retour" onclick="document.location.href='menus'" class="btn see">{{"retour.general"|trans}}</button>
				</div>
			</div>
		</div>
	{% endfor %}


	<!-- Background picture -->
	<section class="home-slider owl-carousel">
		<div class="slider-item .event-slider" style="background-image:url('{{ asset('build/images/lunch-4.jpg') }}')">
			<div class="overlay"></div>
			<div class="container">
				<div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">
					<section class="ftco-section">
						<div class="container">
							<div class="row justify-content-center mb-5 pb-2">
								<div class="col-md-12 text-center heading-section">
									<span class="menu-traiteur">{{"nos.menus"|trans}}</span>
									<h2 class="mb-4 h2-event">{{"traiteur.index.menus2"|trans}}</h2>
								</div>
							</div>
							<div class="row">
								{% for menu in menus %}
									<div class="col-md-4 d-flex align-self-stretch text-center">
										<div class="media block-6 services d-block step-background-traiteur margin-traiteur">
											<div class="media-body p-2 mt-3 justify-content-center align-items-center">
												<img src="/images/uploads/{{ menu.path }}" class="size-img">
												<h3 class="heading">{{ (menu.name~'.'~menu.id)|trans }}</h3>
											</div>
											<!-- Button trigger modal -->
											<button type="button" class="btn see" data-toggle="modal" data-target="#exampleModal{{menu.id}}">
												{{"traiteur.voirlemenu"|trans}}
											</button>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
					</section>
				</div>
			</div>
		</div>
	</section>

